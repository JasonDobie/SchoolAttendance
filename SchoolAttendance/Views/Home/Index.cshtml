@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Welcome</h1>
    <p>School Class Registrations</p>
</div>
<table class="table">
    <tr>
        <td>
            <a asp-controller="School" asp-action="SelectClass" asp-route-registerAttend="Register">Assign Students to Class</a>
        </td>
    </tr>
    <tr>
        <td>
            <a asp-controller="School" asp-action="ScheduleNewDay">Schedule a New Day</a>
        </td>
    </tr>
    <tr>
        <td>
            <a asp-controller="School" asp-action="SelectClass" asp-route-RegisterAttend="Attend">Student Attendance</a>
        </td>
    </tr>
    <tr>
        <td>
            <a asp-controller="School" asp-action="DailyAttendanceReport">Daily Attendance Report</a>
        </td>
    </tr>
    <tr>
        <td>
            <a asp-controller="School" asp-action="TermReportDates">Term Attendance Report</a>
        </td>
    </tr>
    <tr>
        <td>
            <br />
            <br />
            @if (ViewBag.Success == true)
            {
                <h4>New Day scheduled Successfully</h4>
            }
        </td>
    </tr>
</table>