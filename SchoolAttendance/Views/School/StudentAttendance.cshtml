@model SchoolAttendance.DTO.AttendanceDTO

@{
    ViewData["Title"] = "Student Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("StudentAttendance", "School"))
{
    <h1>Student Attendance</h1>
    <br />

    <table class="table">
        <thead>
            <tr>
                <th hidden="hidden">Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Attended</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Attendances.Count; i++)
            {
                <tr>
                    <td hidden="hidden">
                        @Html.HiddenFor(m => Model.Attendances[i].Id)
                    </td>
                    <td>
                        @Html.DisplayFor(m => Model.Attendances[i].FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => Model.Attendances[i].LastName)
                    </td>
                    <td>
                        @Html.CheckBoxFor(m => Model.Attendances[i].Attended)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Save Attendances"/>
}

