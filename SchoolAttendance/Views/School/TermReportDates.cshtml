@model SchoolAttendance.DTO.TermReportDTO
@{
    ViewBag.Title = "Term Report Dates";
}

<h2>Select Dates</h2>

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <td>
                <div>
                    <span>From Date:</span>
                    <input type="date" id="datefrom" name="datefrom" />
                </div>
            </td>
            <td>
                <div>
                    <span>To Date:</span>
                    <input type="date" id="dateto" name="dateto" />
                </div>
            </td>
        </tr>
    </table>
    <input type="submit" value="Submit">
}

